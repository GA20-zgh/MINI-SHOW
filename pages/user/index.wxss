/* pages/user/index.wxss */
page {
  background-color: #edece8;
}
.user_info_warp {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_warp .user_img_warp {
  position: relative;
}
.user_info_warp .user_img_warp .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_warp .user_img_warp .user_info {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 20%;
  text-align: center;
}
.user_info_warp .user_img_warp .user_info .user_icon {
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
}
.user_info_warp .user_img_warp .user_info .user_name {
  color: #fff;
  margin-top: 14rpx;
}
.user_info_warp .user_btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translate(-50%);
  top: -40rpx;
}
.user_content .user_main .history_warp {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_warp navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_warp navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .order_warp {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .user_main .order_warp .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order_warp .order_content {
  display: flex;
}
.user_content .user_main .order_warp .order_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.user_content .user_main .order_warp .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .address_warp {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_warp {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_warp .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_warp .app_info_content {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_warp {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
